<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/backbutton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/back_arrow"/>

        <ImageView
            android:id="@+id/signInLogo"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/logo"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@id/signInLogo"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logga in med"
            android:layout_marginBottom="5dp"
            android:textColor="@color/winter_white"/>

        <Button
            android:id="@+id/telephone_nr_button"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/signInLogo"
            android:layout_centerInParent="true"
            android:text="@string/telefon_nummer"
            android:layout_marginBottom="5dp"
            android:textColor="@color/eerie_black"
            app:backgroundTint="@color/platinum"
            android:background="@drawable/button_rounded"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/orText"
            android:textColor="@color/winter_white"
            android:textSize="10sp" />

        <Button
            android:id="@+id/email_button"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/telephone_nr_button"
            android:layout_centerInParent="true"
            android:text="@string/email"
            android:layout_marginTop="5dp"
            android:textColor="@color/eerie_black"
            app:backgroundTint="@color/platinum"
            android:background="@drawable/button_rounded"/>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>