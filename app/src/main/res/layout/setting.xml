<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="5dp"
    android:foreground="?android:attr/selectableItemBackground">


    <androidx.cardview.widget.CardView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:clickable="true"
        android:layout_margin="5dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:backgroundTint="#1a1a1a"
        android:id="@+id/settingCardView">

        <ImageView
            android:id="@+id/settingImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="#1a1a1a"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/typeOfSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="hej"
        android:textColor="@color/winter_white"
        android:layout_toEndOf="@+id/settingCardView"
        />

    <TextView
        android:id="@+id/setting_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/typeOfSetting"
        android:layout_toEndOf="@+id/settingCardView"
        android:textColor="@color/winter_white"
        android:layout_marginStart="5dp"
        android:text="hejhej"/>


</RelativeLayout>